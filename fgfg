-- Delta –∞–≤—Ç–æ-—Å–ø–∞–º —Å–∫—Ä–∏–ø—Ç –¥–ª—è MM2 —Å Server Hop
local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local player = Players.LocalPlayer
local placeId = game.PlaceId

-- –ü—Ä–æ–≤–µ—Ä—è–µ–º —á—Ç–æ –º—ã –≤ MM2
if placeId ~= 142823291 then
    warn("‚ùå –≠—Ç–æ –Ω–µ MM2! –ó–∞–ø—É—Å—Ç–∏—Ç–µ —Å–∫—Ä–∏–ø—Ç –≤ Murder Mystery 2")
    return
end

-- –§–ª–∞–≥ –¥–ª—è –∞–≤—Ç–æ–∑–∞–ø—É—Å–∫–∞ –≤ Delta
getgenv().AutoSpamEnabled = true

local messages = {
    "üíé –ü—Ä–æ–¥–∞–º Godly –¥–µ—à–µ–≤–æ –∑–∞ –≥—Ä–Ω. Hexon_Shop",
    "üî• Godly –∑–∞ –≥—Ä–∏–≤–Ω—ã. –ë—ã—Å—Ç—Ä–æ. Hexon_Shop",
    "üí∞ –ö—É–ø–∏—Ç—å Godly –Ω–µ–¥–æ—Ä–æ–≥–æ. Hexon_Shop",
    "üéÆ Godly –ø–æ –≤—ã–≥–æ–¥–Ω–æ–π —Ü–µ–Ω–µ. Hexon_Shop",
    "‚≠ê Godly –¥–ª—è —Ç—Ä–µ–π–¥–∞. Hexon_Shop",
    "‚ö° –î–µ—à–µ–≤—ã–π Godly –∑–∞ –≥—Ä–Ω. Hexon_Shop",
    "üîî –ü—Ä–æ–¥–∞–∂–∞ Godly. Hexon_Shop",
    "‚ú® Godly –≤ –Ω–∞–ª–∏—á–∏–∏. Hexon_Shop",
    "üöÄ –ü–æ–∫—É–ø–∞–π Godly. Hexon_Shop",
    "üíØ Godly –ø–æ –Ω–∏–∑–∫–æ–π —Ü–µ–Ω–µ. Hexon_Shop"
}

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—Ä–µ–º–µ—à–∏–≤–∞–Ω–∏—è
local function shuffle(tbl)
    local copy = {}
    for i, v in ipairs(tbl) do
        copy[i] = v
    end
    for i = #copy, 2, -1 do
        local j = math.random(i)
        copy[i], copy[j] = copy[j], copy[i]
    end
    return copy
end

-- –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
local function sendMessage(text)
    -- –ü—Ä–æ–±—É–µ–º —Å—Ç–∞—Ä—ã–π —á–∞—Ç
    local success1 = pcall(function()
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(text, "All")
    end)
    
    -- –ü—Ä–æ–±—É–µ–º –Ω–æ–≤—ã–π —á–∞—Ç
    local success2 = pcall(function()
        game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(text)
    end)
    
    return success1 or success2
end

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è —Å–ø–∏—Å–∫–∞ —Å–µ—Ä–≤–µ—Ä–æ–≤ (Server Hop) - –£–ü–†–û–©–ï–ù–ù–ê–Ø
local function getServers()
    local servers = {}
    
    -- –ü—Ä–æ–±—É–µ–º –ø–æ–ª—É—á–∏—Ç—å —Å–µ—Ä–≤–µ—Ä—ã
    local success, result = pcall(function()
        local url = string.format("https://games.roblox.com/v1/games/%s/servers/Public?sortOrder=Asc&limit=25", placeId)
        local response = game:HttpGet(url, true)
        return HttpService:JSONDecode(response)
    end)
    
    if success and result and result.data then
        for _, server in ipairs(result.data) do
            -- –ò—Å–∫–ª—é—á–∞–µ–º —Ç–µ–∫—É—â–∏–π —Å–µ—Ä–≤–µ—Ä –∏ —Å–ª–∏—à–∫–æ–º –∑–∞–ø–æ–ª–Ω–µ–Ω–Ω—ã–µ
            if server.id ~= game.JobId and server.playing < (server.maxPlayers or 12) - 2 then
                table.insert(servers, server.id)
            end
        end
    end
    
    return servers
end

-- –ü—Ä–æ—Å—Ç–∞—è —Ñ—É–Ω–∫—Ü–∏—è Server Hop
local function serverHop()
    print("üîÑ –ü–æ–∏—Å–∫ –Ω–æ–≤–æ–≥–æ —Å–µ—Ä–≤–µ—Ä–∞...")
    
    local servers = getServers()
    
    if #servers > 0 then
        -- –í—ã–±–∏—Ä–∞–µ–º —Å–ª—É—á–∞–π–Ω—ã–π —Å–µ—Ä–≤–µ—Ä
        local targetServer = servers[math.random(1, #servers)]
        
        print("üéØ –ü–µ—Ä–µ—Ö–æ–¥ –Ω–∞ –Ω–æ–≤—ã–π —Å–µ—Ä–≤–µ—Ä...")
        
        -- –ü—ã—Ç–∞–µ–º—Å—è –ø–µ—Ä–µ–π—Ç–∏ –Ω–∞ –Ω–∞–π–¥–µ–Ω–Ω—ã–π —Å–µ—Ä–≤–µ—Ä
        local success, errorMsg = pcall(function()
            TeleportService:TeleportToPlaceInstance(placeId, targetServer, player)
        end)
        
        if success then
            print("‚úÖ –£—Å–ø–µ—à–Ω—ã–π –ø–µ—Ä–µ—Ö–æ–¥ –Ω–∞ –Ω–æ–≤—ã–π —Å–µ—Ä–≤–µ—Ä!")
            return true
        else
            print("‚ö†Ô∏è –û—à–∏–±–∫–∞ –ø–µ—Ä–µ—Ö–æ–¥–∞: " .. tostring(errorMsg))
        end
    end
    
    -- –ï—Å–ª–∏ –Ω–µ —É–¥–∞–ª–æ—Å—å, –ø—Ä–æ–±—É–µ–º –æ–±—ã—á–Ω—ã–π Teleport
    print("üîÑ –ü—Ä–æ–±—É—é –æ–±—ã—á–Ω—ã–π –ø–µ—Ä–µ—Ö–æ–¥...")
    local success2 = pcall(function()
        TeleportService:Teleport(placeId)
    end)
    
    return success2
end

-- –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è - –ü–†–û–°–¢–ê–Ø –ò –ù–ê–î–ï–ñ–ù–ê–Ø
local function startAutoSpam()
    print("ü§ñ –ê–≤—Ç–æ-—Å–ø–∞–º –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω!")
    
    while getgenv().AutoSpamEnabled do
        -- –ñ–¥–µ–º –Ω–µ–º–Ω–æ–≥–æ –ø–æ—Å–ª–µ –∑–∞–≥—Ä—É–∑–∫–∏
        task.wait(5)
        
        -- –ñ–¥–µ–º –∑–∞–≥—Ä—É–∑–∫–∏ —á–∞—Ç–∞
        local chatLoaded = false
        for i = 1, 5 do
            local oldChat = pcall(function() 
                return game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents") 
            end)
            
            local newChat = pcall(function()
                return game:GetService("TextChatService"):FindFirstChild("TextChannels")
            end)
            
            if oldChat or newChat then
                chatLoaded = true
                break
            end
            task.wait(1)
        end
        
        if chatLoaded then
            print("‚úÖ –ß–∞—Ç –≥–æ—Ç–æ–≤, –Ω–∞—á–∏–Ω–∞—é –æ—Ç–ø—Ä–∞–≤–∫—É...")
            
            -- –û—Ç–ø—Ä–∞–≤–ª—è–µ–º 5 —Å–æ–æ–±—â–µ–Ω–∏–π
            local shuffled = shuffle(messages)
            
            for i = 1, 5 do
                if not getgenv().AutoSpamEnabled then break end
                
                sendMessage(shuffled[i])
                print("üì¢ –°–æ–æ–±—â–µ–Ω–∏–µ " .. i .. "/5 –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ")
                
                if i < 5 then
                    task.wait(math.random(2, 3)) -- –ó–∞–¥–µ—Ä–∂–∫–∞ –º–µ–∂–¥—É —Å–æ–æ–±—â–µ–Ω–∏—è–º–∏
                end
            end
            
            -- Server Hop –ø–æ—Å–ª–µ 5 —Å–æ–æ–±—â–µ–Ω–∏–π
            if getgenv().AutoSpamEnabled then
                print("üîÑ Server Hop –ø–æ—Å–ª–µ 5 —Å–æ–æ–±—â–µ–Ω–∏–π...")
                task.wait(1) -- –ö–æ—Ä–æ—Ç–∫–∞—è –ø–∞—É–∑–∞
                serverHop()
            end
            
        else
            print("‚ö†Ô∏è –ß–∞—Ç –Ω–µ –∑–∞–≥—Ä—É–∑–∏–ª—Å—è, –ø—Ä–æ–±—É—é Server Hop...")
            task.wait(2)
            serverHop()
        end
        
        -- –ñ–¥–µ–º –ø–µ—Ä–µ–¥ –ø–æ–≤—Ç–æ—Ä–Ω–æ–π –ø–æ–ø—ã—Ç–∫–æ–π –µ—Å–ª–∏ —á—Ç–æ-—Ç–æ –ø–æ—à–ª–æ –Ω–µ —Ç–∞–∫
        task.wait(10)
    end
    
    print("‚èπÔ∏è –ê–≤—Ç–æ-—Å–ø–∞–º –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
end

-- –ê–≤—Ç–æ-–∑–∞–ø—É—Å–∫ —Å—Ä–∞–∑—É
print("========================================")
print("ü§ñ MM2 AUTO-SPAM –°–ï–†–í–ï–† –•–û–ü")
print("üì¢ Godly –∑–∞ –≥—Ä–∏–≤–Ω—ã | Hexon_Shop")
print("========================================")

task.wait(2) -- –ö–æ—Ä–æ—Ç–∫–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –ø–µ—Ä–µ–¥ —Å—Ç–∞—Ä—Ç–æ–º

-- –ó–∞–ø—É—Å–∫–∞–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª
coroutine.wrap(function()
    startAutoSpam()
end)()

-- –§—É–Ω–∫—Ü–∏—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏ (–º–æ–∂–Ω–æ –≤—ã–∑–≤–∞—Ç—å –∏–∑ –∫–æ–Ω—Å–æ–ª–∏)
getgenv().StopSpam = function()
    getgenv().AutoSpamEnabled = false
    print("‚èπÔ∏è –°–ø–∞–º –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
end

print("‚úÖ –°–∫—Ä–∏–ø—Ç –∑–∞–ø—É—â–µ–Ω –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏")
print("‚ÑπÔ∏è –î–ª—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏ –≤–≤–µ–¥–∏—Ç–µ: StopSpam()")
