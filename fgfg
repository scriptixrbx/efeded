-- Delta –∞–≤—Ç–æ-—Å–ø–∞–º —Å–∫—Ä–∏–ø—Ç –¥–ª—è MM2 —Å —É–ª—É—á—à–µ–Ω–Ω—ã–º Server Hop
-- –ú–æ–¥–∏—Ñ–∏—Ü–∏—Ä–æ–≤–∞–Ω–æ: Server Hop —Ç–µ–ø–µ—Ä—å –∏—Å–ø–æ–ª—å–∑—É–µ—Ç API –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞ –Ω–∞ –¥—Ä—É–≥–æ–π —Å–µ—Ä–≤–µ—Ä, —á—Ç–æ–±—ã –∏–∑–±–µ–∂–∞—Ç—å –≤–æ–∑–≤—Ä–∞—Ç–∞ –Ω–∞ —Ç–æ—Ç –∂–µ

local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local player = Players.LocalPlayer
local placeId = game.PlaceId

-- –ü—Ä–æ–≤–µ—Ä—è–µ–º —á—Ç–æ –º—ã –≤ MM2
if placeId ~= 142823291 then
    warn("‚ùå –≠—Ç–æ –Ω–µ MM2! –ó–∞–ø—É—Å—Ç–∏—Ç–µ —Å–∫—Ä–∏–ø—Ç –≤ Murder Mystery 2")
    return
end

-- –§–ª–∞–≥ –¥–ª—è –∞–≤—Ç–æ–∑–∞–ø—É—Å–∫–∞
getgenv().AutoSpamEnabled = true

local messages = {
    "üíé –ü—Ä–æ–¥–∞–º Godly –¥–µ—à–µ–≤–æ –∑–∞ –≥—Ä–Ω. Hexon_Shop",
    "üî• Godly –∑–∞ –≥—Ä–∏–≤–Ω—ã. –ë—ã—Å—Ç—Ä–æ. Hexon_Shop",
    "üí∞ –ö—É–ø–∏—Ç—å Godly –Ω–µ–¥–æ—Ä–æ–≥–æ. Hexon_Shop",
    "üéÆ Godly –ø–æ –≤—ã–≥–æ–¥–Ω–æ–π —Ü–µ–Ω–µ. Hexon_Shop",
    "‚≠ê Godly –¥–ª—è —Ç—Ä–µ–π–¥–∞. Hexon_Shop",
    "‚ö° –î–µ—à–µ–≤—ã–π Godly –∑–∞ –≥—Ä–Ω. Hexon_Shop",
    "üîî –ü—Ä–æ–¥–∞–∂–∞ Godly. Hexon_Shop",
    "‚ú® Godly –≤ –Ω–∞–ª–∏—á–∏–∏. Hexon_Shop",
    "üöÄ –ü–æ–∫—É–ø–∞–π Godly. Hexon_Shop",
    "üíØ Godly –ø–æ –Ω–∏–∑–∫–æ–π —Ü–µ–Ω–µ. Hexon_Shop"
}

-- –ü–µ—Ä–µ–º–µ—à–∏–≤–∞–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏–π
local function shuffle(tbl)
    for i = #tbl, 2, -1 do
        local j = math.random(i)
        tbl[i], tbl[j] = tbl[j], tbl[i]
    end
    return tbl
end

-- –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
local function sendMessage(text)
    pcall(function()
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(text, "All")
    end)
   
    pcall(function()
        game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(text)
    end)
end

-- –£–ª—É—á—à–µ–Ω–Ω—ã–π Server Hop —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º API –¥–ª—è –≤—ã–±–æ—Ä–∞ –¥—Ä—É–≥–æ–≥–æ —Å–µ—Ä–≤–µ—Ä–∞
local function serverHop()
    print("üîÑ –í—ã–ø–æ–ª–Ω—è—é —É–ª—É—á—à–µ–Ω–Ω—ã–π Server Hop...")
   
    -- –ò—Å–ø–æ–ª—å–∑—É–µ–º queue_on_teleport –¥–ª—è –∞–≤—Ç–æ-–∑–∞–ø—É—Å–∫–∞ –ø–æ—Å–ª–µ –ø–µ—Ä–µ—Ö–æ–¥–∞
    if queue_on_teleport then
        queue_on_teleport([[
            getgenv().AutoStartSpam = true
            task.wait(5)
            loadstring(game:HttpGet("https://pastebin.com/raw/YOUR_SCRIPT_CODE"))()
        ]])
    end
   
    local currentJobId = game.JobId
    local servers = {}
    local cursor = nil
    local attempts = 0
    local maxAttempts = 5
   
    -- –°–æ–±–∏—Ä–∞–µ–º —Å–ø–∏—Å–æ–∫ —Å–µ—Ä–≤–µ—Ä–æ–≤
    while attempts < maxAttempts do
        attempts += 1
        local url = "https://games.roblox.com/v1/games/" .. placeId .. "/servers/Public?sortOrder=Asc&limit=100"
        if cursor then
            url = url .. "&cursor=" .. cursor
        end
       
        local success, response = pcall(function()
            return HttpService:GetAsync(url)
        end)
       
        if success then
            local data = HttpService:JSONDecode(response)
            for _, server in ipairs(data.data) do
                if server.playing < server.maxPlayers and server.id ~= currentJobId then
                    table.insert(servers, server.id)
                end
            end
            cursor = data.nextPageCursor
            if not cursor then break end
        else
            print("‚ö†Ô∏è –û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ —Å–ø–∏—Å–∫–∞ —Å–µ—Ä–≤–µ—Ä–æ–≤: " .. response)
            task.wait(2)
        end
    end
   
    if #servers > 0 then
        -- –í—ã–±–∏—Ä–∞–µ–º —Å–ª—É—á–∞–π–Ω—ã–π —Å–µ—Ä–≤–µ—Ä
        local targetServer = servers[math.random(1, #servers)]
        print("üéØ –ù–∞–π–¥–µ–Ω —Å–µ—Ä–≤–µ—Ä: " .. targetServer)
       
        local success = pcall(function()
            TeleportService:TeleportToPlaceInstance(placeId, targetServer)
        end)
       
        if not success then
            print("‚ö†Ô∏è –û—à–∏–±–∫–∞ —Ç–µ–ª–µ–ø–æ—Ä—Ç–∞, –ø—Ä–æ–±—É—é –∑–∞–ø–∞—Å–Ω–æ–π –≤–∞—Ä–∏–∞–Ω—Ç...")
            TeleportService:Teleport(placeId)
        end
       
        return true
    else
        print("‚ö†Ô∏è –ù–µ—Ç –¥–æ—Å—Ç—É–ø–Ω—ã—Ö —Å–µ—Ä–≤–µ—Ä–æ–≤, –∏—Å–ø–æ–ª—å–∑—É—é —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–π —Ç–µ–ª–µ–ø–æ—Ä—Ç...")
        pcall(function()
            TeleportService:Teleport(placeId)
        end)
        return true
    end
end

-- –û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª
local function mainLoop()
    print("ü§ñ –ê–≤—Ç–æ-—Å–ø–∞–º –∑–∞–ø—É—â–µ–Ω!")
    print("üîÑ –†–µ–∂–∏–º: 5 —Å–æ–æ–±—â–µ–Ω–∏–π ‚Üí Server Hop")
   
    local cycleCount = 0
   
    while getgenv().AutoSpamEnabled do
        cycleCount += 1
        print("\n=== –¶–∏–∫–ª " .. cycleCount .. " ===")
       
        -- –ñ–¥–µ–º –∑–∞–≥—Ä—É–∑–∫–∏ —á–∞—Ç–∞
        for i = 1, 10 do
            local chatLoaded = pcall(function()
                return game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents") ~= nil
            end)
           
            if chatLoaded then
                print("‚úÖ –ß–∞—Ç –∑–∞–≥—Ä—É–∂–µ–Ω")
                break
            end
           
            if i == 10 then
                print("‚ö†Ô∏è –ß–∞—Ç –Ω–µ –∑–∞–≥—Ä—É–∑–∏–ª—Å—è, –ø—Ä–æ–±—É—é Server Hop")
                serverHop()
                task.wait(10)
                continue
            end
           
            task.wait(1)
        end
       
        -- –û—Ç–ø—Ä–∞–≤–ª—è–µ–º 5 —Å–æ–æ–±—â–µ–Ω–∏–π
        local shuffled = shuffle(messages)
       
        for i = 1, 5 do
            if not getgenv().AutoSpamEnabled then break end
           
            sendMessage(shuffled[i])
            print("üì¢ [" .. i .. "/5] " .. string.sub(shuffled[i], 1, 20) .. "...")
           
            if i < 5 then
                task.wait(math.random(3, 4)) -- –ó–∞–¥–µ—Ä–∂–∫–∞ 3-4 —Å–µ–∫—É–Ω–¥—ã
            end
        end
       
        -- Server Hop –ø–æ—Å–ª–µ 5 —Å–æ–æ–±—â–µ–Ω–∏–π
        if getgenv().AutoSpamEnabled then
            print("üîÑ –û—Ç–ø—Ä–∞–≤–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞, –¥–µ–ª–∞—é Server Hop...")
            task.wait(1) -- –ö–æ—Ä–æ—Ç–∫–∞—è –ø–∞—É–∑–∞
           
            -- –í—ã–∑—ã–≤–∞–µ–º Server Hop
            local hopSuccess = serverHop()
           
            if hopSuccess then
                print("‚úÖ Server Hop –≤—ã–ø–æ–ª–Ω–µ–Ω, –∂–¥—É –ø–µ—Ä–µ—Ö–æ–¥–∞...")
                -- –ñ–¥–µ–º —Ç–µ–ª–µ–ø–æ—Ä—Ç–∞—Ü–∏—é
                for i = 1, 15 do
                    if not getgenv().AutoSpamEnabled then break end
                    task.wait(1)
                end
            end
        end
    end
   
    print("‚èπÔ∏è –ê–≤—Ç–æ-—Å–ø–∞–º –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
end

-- –ê–≤—Ç–æ-–∑–∞–ø—É—Å–∫ —Å –ø—Ä–æ–≤–µ—Ä–∫–æ–π –Ω–∞ –ø–µ—Ä–≤–æ–Ω–∞—á–∞–ª—å–Ω—ã–π –∑–∞–ø—É—Å–∫
print("========================================")
print("ü§ñ MM2 AUTO-SPAM WITH IMPROVED SERVER HOP")
print("üì¢ –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π —Ä–µ–∂–∏–º")
print("üì¢ Server Hop –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ ‚Üí 5 —Å–æ–æ–±—â–µ–Ω–∏–π ‚Üí Server Hop ‚Üí –ü–æ–≤—Ç–æ—Ä")
print("========================================")

-- –ó–∞–ø—É—Å–∫–∞–µ–º —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
task.wait(3)

if getgenv().AutoStartSpam == true then
    -- –ï—Å–ª–∏ —Ñ–ª–∞–≥ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω (–ø–æ—Å–ª–µ —Ö–æ–ø–∞), –∑–∞–ø—É—Å–∫–∞–µ–º —Å–ø–∞–º
    local success, err = pcall(function()
        mainLoop()
    end)
    if not success then
        print("‚ö†Ô∏è –û—à–∏–±–∫–∞ –≤ –æ—Å–Ω–æ–≤–Ω–æ–º —Ü–∏–∫–ª–µ: " .. err)
        print("üîÑ –ü—Ä–æ–±—É—é –ø–µ—Ä–µ–∑–∞–ø—É—Å—Ç–∏—Ç—å...")
        task.wait(5)
        mainLoop()
    end
else
    -- –ï—Å–ª–∏ –ø–µ—Ä–≤—ã–π –∑–∞–ø—É—Å–∫, —Å—Ä–∞–∑—É –¥–µ–ª–∞–µ–º Server Hop
    serverHop()
end

-- –§—É–Ω–∫—Ü–∏—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏
getgenv().StopSpam = function()
    getgenv().AutoSpamEnabled = false
    print("‚èπÔ∏è –°–ø–∞–º –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
end

print("‚úÖ –°–∫—Ä–∏–ø—Ç —Ä–∞–±–æ—Ç–∞–µ—Ç")
print("‚ÑπÔ∏è StopSpam() - –æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å")
